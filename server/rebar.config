{erl_opts, [debug_info]}.
{deps, [
    {epgsql, "4.7.1"},
    {pure_migrations, "1.3.0"}
]}.

{shell, [
    {sys_config, "config/sys.config"},
    {apps, [server_app]}
]}.

{dist_node, [
    {setcookie, 'lyceum'},
    {sname, 'lyceum_server'}
]}.

{relx, [{release, {lyceum_server, "0.0.1"},
         [server_app]},

        {sys_config, "config/sys.config"},
        {vm_args, "config/vm.args"},
        {dev_mode, true},
        {include_erts, false},

        {extended_start_script, true}]}.

{profiles, [
    {prod, [{relx, [{dev_mode, false},
                    {include_erts, true}]}
     ]}
]}.

{plugins, [
    { rebar3_nix, ".*", {git, "https://github.com/erlang-nix/rebar3_nix.git", {tag, "v0.1.1"}}}
]}.
